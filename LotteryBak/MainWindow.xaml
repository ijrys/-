<Window x:Class="Lottery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lottery"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Window.Resources>
		<ResourceDictionary>
			<Style x:Key="StyleGrid" TargetType="Grid">
				<Setter Property="Background" Value="{StaticResource  BrushBackGround}"/>
			</Style>
		</ResourceDictionary>
	</Window.Resources>
	<Grid Style="{StaticResource StyleGrid}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="4px"/>
			<ColumnDefinition Width="2*"/>
		</Grid.ColumnDefinitions>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="1*"/>
				<RowDefinition Height="1*"/>
			</Grid.RowDefinitions>
		</Grid>
		<Button x:Name="btnNameList" Grid.Column="0" Grid.Row="0">名单管理</Button>
		<Button x:Name="btnSetting" Grid.Column="0" Grid.Row="1">设置</Button>
		
    </Grid>
</Window>
